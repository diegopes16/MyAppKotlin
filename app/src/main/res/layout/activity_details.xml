<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="titulo"
            type="String" />

        <variable
            name="sinopse"
            type="String" />
    </data>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f2ff"
            tools:context=".view.DetailsActivity">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/poster_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/poster_id"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/loki_logo" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:text="@string/title"
                android:textColor="@color/darkgreen"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/poster_id"
                app:layout_constraintTop_toBottomOf="@id/poster_id" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/yearMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingBottom="5dp"
                android:text="@string/ano"
                android:textColor="@color/darkgreen"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sinopse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Sinopse:"
                android:textColor="@color/darkgreen"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/yearMovie"
                app:layout_constraintTop_toBottomOf="@id/yearMovie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/texto_sinopse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/sinopse"
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/sinopse"
                app:layout_constraintTop_toBottomOf="@id/sinopse" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/genero_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:text="Genêro: "
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@id/texto_sinopse" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/genero"
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/genero_title"
                app:layout_constraintStart_toEndOf="@id/genero_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/duracao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Duração: "
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/genero"
                app:layout_constraintTop_toBottomOf="@id/texto_sinopse" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/duracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="@string/duracao"
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/duracao_title"
                app:layout_constraintStart_toEndOf="@id/duracao_title" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/botao_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:background="@color/darkgreen"
                android:text="@string/voltarButtonText"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/duracao" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
